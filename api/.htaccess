# Configuration pour l'API PHP
RewriteEngine On

# Autoriser l'accès direct aux fichiers dans uploads (images, etc.)
# Cette règle doit être AVANT la règle qui redirige vers index.php
# Vérifier si la requête est pour un fichier dans uploads et si le fichier existe
RewriteCond %{REQUEST_URI} ^/api/uploads/
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f
RewriteRule ^ - [L]

# Route all requests (including OPTIONS) to index.php
# Mais seulement si le fichier n'existe pas
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]

# Headers CORS
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Max-Age "3600"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>

# Gestion des erreurs API
ErrorDocument 404 "{\"success\":false,\"message\":\"Endpoint non trouvé\"}"
ErrorDocument 500 "{\"success\":false,\"message\":\"Erreur serveur interne\"}"

# Sécurité - Empêcher l'accès direct aux fichiers de configuration
<Files "*.php">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

<Files "database.php">
    Order allow,deny
    Deny from all
</Files>

<Files "email.php">
    Order allow,deny
    Deny from all
</Files>

# Empêcher l'accès aux dossiers sensibles
RedirectMatch 403 ^/api/logs/
RedirectMatch 403 ^/api/backups/
RedirectMatch 403 ^/api/cache/
RedirectMatch 403 ^/api/uploads/temp/

# Cache pour les réponses API
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>